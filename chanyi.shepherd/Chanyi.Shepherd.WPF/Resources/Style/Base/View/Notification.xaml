<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:uc="clr-namespace:Chanyi.Shepherd.WPF.UserControls">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Common.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="GroupBox">
        <Setter Property="Margin" Value="3"></Setter>
        <Setter Property="Padding" Value="0,5,0,0"></Setter>
    </Style>
    <Style TargetType="DataGrid" BasedOn="{StaticResource baseDg}"></Style>
    <Style TargetType="uc:ProgressRing">
        <Setter Property="Width" Value="40"></Setter>
        <Setter Property="Height" Value="40"></Setter>
    </Style>
</ResourceDictionary>
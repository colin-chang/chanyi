<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../FormWithTreeView.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <!--继承表单控件样式-->
    <Style TargetType="TextBlock" BasedOn="{StaticResource txtblc}"></Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource cmbox}">
        <Setter Property="Width" Value="80"></Setter>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Height" Value="25"></Setter>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Margin" Value="10,0"></Setter>
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="Height" Value="23"></Setter>
    </Style>
    <Style TargetType="DatePicker" BasedOn="{StaticResource dp}">
        <Setter Property="Margin" Value="10"></Setter>
    </Style>
    <Style TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
    </Style>
    <Style TargetType="StackPanel" x:Key="skpTarget">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="Margin" Value="0,0,10,0"></Setter>
    </Style>
</ResourceDictionary>
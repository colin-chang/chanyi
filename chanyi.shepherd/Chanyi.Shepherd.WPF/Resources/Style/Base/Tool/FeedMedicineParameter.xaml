<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Form.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="Button" BasedOn="{StaticResource btn}"></Style>

    <Style TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
    </Style>
    <Style TargetType="DataGrid" BasedOn="{StaticResource baseDg}">
        <Setter Property="IsReadOnly" Value="False"></Setter>
        <Setter Property="Background" Value="#fff"></Setter>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource txtRemark}" x:Key="remark">
        <Setter Property="Width" Value="340"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="Margin" Value="5,0,0,0"> </Setter>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource txtblc}">
        <Setter Property="Margin" Value="5,5"></Setter>
    </Style>
</ResourceDictionary>
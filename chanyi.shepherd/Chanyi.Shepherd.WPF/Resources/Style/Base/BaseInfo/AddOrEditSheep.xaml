<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Form.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="TextBlock" BasedOn="{StaticResource txtblcError}" x:Key="error">
        <Setter Property="Margin" Value="15,0,0,0"></Setter>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource txtRemark}" x:Key="remark">
        <Setter Property="Height" Value="45"></Setter>
        <Setter Property="Grid.Column" Value="2"></Setter>
        <Setter Property="Grid.ColumnSpan" Value="5"></Setter>
    </Style>
</ResourceDictionary>
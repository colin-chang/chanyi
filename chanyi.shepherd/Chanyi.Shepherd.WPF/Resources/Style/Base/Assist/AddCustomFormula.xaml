<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../FormWithTreeView.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="TextBlock" BasedOn="{StaticResource txtblc}">
        <Setter Property="Margin" Value="8,0,0,0"></Setter>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource txt}">
        <Setter Property="Width" Value="70"></Setter>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource cmbox}">
        <Setter Property="Width" Value="75"></Setter>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource btn}"></Style>
    
    <Style TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
    </Style>
    <Style TargetType="DataGrid" BasedOn="{StaticResource baseDg}">
        <Setter Property="IsReadOnly" Value="False"></Setter>
        <Setter Property="Background" Value="#fff"></Setter>
    </Style>
</ResourceDictionary>
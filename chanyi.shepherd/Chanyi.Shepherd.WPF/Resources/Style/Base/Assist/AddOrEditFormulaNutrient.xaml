<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Form.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="TextBox" BasedOn="{StaticResource txt}">
        <Setter Property="Width" Value="50"></Setter>
    </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource cmbox}">
        <Setter Property="Width" Value="80"></Setter>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource txtblc}">
        <Setter Property="TextTrimming" Value="WordEllipsis"></Setter>
    </Style>
</ResourceDictionary>
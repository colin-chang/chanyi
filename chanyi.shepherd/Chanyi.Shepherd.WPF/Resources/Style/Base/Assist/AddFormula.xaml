<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Form.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="DataGrid" BasedOn="{StaticResource baseDg}"></Style>
    <Style TargetType="GroupBox">
        <Setter Property="Margin" Value="10,5"></Setter>
        <Setter Property="Padding" Value="0,5,0,0"></Setter>
    </Style>
    <Style TargetType="StackPanel" x:Key="stkOthers">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="20 0,0,0"></Setter>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource txt}">
        <Setter Property="Width" Value="120"></Setter>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource txtblcError}" x:Key="txtblcError">
        <Setter Property="Margin" Value="20,0,0,0"></Setter>
        <Setter Property="Foreground" Value="Red"></Setter>
    </Style>

</ResourceDictionary>